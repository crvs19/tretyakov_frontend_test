{% macro checkbox(props) %}
<div class="checkbox{% if props.className %} {{ props.className }}{% endif %}">
	<input 
		class="checkbox__input" 
		id="{% if props.id %} {{ props.id }}{% endif %}" 
		type="checkbox" 
		name="{% if props.name %} {{ props.name }}{% endif %}"
		>
	<label class="checkbox__label" for="{% if props.id %} {{ props.id }}{% endif %}">{{ props.label }}</label>
</div>
{% endmacro %}