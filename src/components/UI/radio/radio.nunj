{% macro radio(props) %}
<div class="radio{% if props.className %} {{ props.className }}{% endif %}">
	<input 
		class="radio__input" 
		id="{% if props.id %} {{ props.id }}{% endif %}" 
		type="radio" 
		name="{% if props.name %} {{ props.name }}{% endif %}"
		>
	<label class="radio__label" for="{% if props.id %} {{ props.id }}{% endif %}">{{ props.label }}</label>
</div>
{% endmacro %}